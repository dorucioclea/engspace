{
    "name": "@engspace/server-db",
    "version": "0.1.0",
    "description": "Engineering Space - Server database",
    "main": "dist/index",
    "types": "dist/index",
    "repository": "https://github.com/engspace/engspace",
    "author": "Remi Thebault <remi.thebault@gmail.com>",

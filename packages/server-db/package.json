{
    "name": "@engspace/server-db",
    "version": "0.1.0",
    "description": "Engineering Space - Server database",
    "main": "dist/index",
    "types": "dist/index",
    "repository": "https://github.com/engspace/engspace",
    "author": "Remi Thebault <remi.thebault@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "lint": "eslint --ext .js,.ts .",
        "lint:fix": "eslint --fix --ext .js,.ts .",
        "copy:sql": "copyfiles -u 1 \"src/sql/*\" dist",
        "build:ts": "tsc -b .",
        "build": "npm-run-all copy:sql build:ts",
        "test": "cross-env NODE_ENV=test mocha",
        "test:cov": "cross-env NODE_ENV=test nyc mocha",
        "clean": "rimraf ./dist/ ../../.build-cache/server-db.tsbuildinfo"
    },
    "nyc": {
        "cache": false,
        "extension": [
            ".ts"
        ],
        "exclude": [
            "test/**/*",
            "**/*.d.ts",
            "**/*.js"
        ]
    },
    "dependencies": {
        "@engspace/core": "^0.1.0",
        "config": "^3.2.4",
        "slonik": "^21.4.1",
        "slonik-interceptor-preset": "^1.2.9",
        "slonik-sql-tag-raw": "^1.0.1"
    },
    "devDependencies": {
        "@engspace/demo-data-input": "^0.1.0",
        "@engspace/eslint-config": "^0.1.0",
        "@engspace/prettier-config": "^0.1.0",
        "@types/chai": "^4.2.5",
        "@types/chai-as-promised": "^7.1.2",
        "@types/chai-uuid": "^1.0.1",
        "@types/config": "^0.0.36",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/mocha": "^5.2.7",
        "@types/slonik": "^21.4.0",
        "@typescript-eslint/eslint-plugin": "^2.7.0",
        "@typescript-eslint/parser": "^2.7.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-shallow-deep-equal": "^1.4.6",
        "chai-uuid": "^1.0.6",
        "copyfiles": "^2.1.1",
        "cross-env": "^6.0.3",
        "del": "^5.1.0",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.6.0",
        "eslint-plugin-prettier": "^3.1.1",
        "lodash.clonedeep": "^4.5.0",
        "mocha": "^6.2.2",
        "npm-run-all": "^4.1.5",
        "nyc": "^14.1.1",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    }
}
